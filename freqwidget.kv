BoxLayout:
    orientation: 'vertical'
    freq: 440
    volume: 1

    TextInput:
        size_hint: (None, None)
        size: (55, 30)
        text: str(root.volume)
        on_text: root.volume = float(self.text)
    Slider:
        id: vol_sl
        orientation: 'vertical'
        size_hint: (None, 1)
        size: (30, 300)
        min: 0
        max: 1
        step: 0.01
        value: root.volume
        on_value: root.volume = float(self.value)
		
	TextInput:
        size_hint: (None, None)
        size: (55, 30)
        text: str(root.freq)
        on_text: root.freq = int(self.text)