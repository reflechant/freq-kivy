BoxLayout:
    orientation: 'vertical'
    freq: 440
    #Label:
    #    text: str(root.freq)
    TextInput:
        text: str(root.freq)
        on_text: root.freq = int(self.text)
    Slider:
        id: freq_sl
        orientation: 'vertical'
        min: 20
        max: 20000
        step: 1
        value: root.freq
        on_value: root.freq = int(self.value)

