BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, .05)
        Button:
            id: play
            text: 'играть'
            on_release: app.start_play(self)
        Button:
            id: add
            text: 'добавить частоту'
            on_release: app.add_freq(frcon)
        TextInput:
            id: duration
            size_hint: (None, None)
            size: (55, 30)
            text: str(app.duration)
            on_text: app.duration = float(self.text)
        Label:
            text: "секунд"
            size_hint: (None, None)
            size: (60, 30)

        Button:
            id: openFileDialog
            text: 'Открыть/Сохранить'
            on_release: app.openFileDialog(root)

    BoxLayout:
        id: frcon
